{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": ["pnpm pull", "pnpm lint"],
    "after:bump": "pnpm dlx auto-changelog -p"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}