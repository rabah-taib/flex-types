{
  "compilerOptions": {
    // Base
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "moduleDetection": "force",
    "isolatedModules": true,

    // Strictness
    "strict": true,

    // Output
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,

    // Other
    "module": "NodeNext",
    "lib": ["ES2022"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
